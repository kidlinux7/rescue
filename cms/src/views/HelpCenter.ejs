<%- include('partials/Header') %> 
<%- include('modals/DynamicModal', {headings: [ __('Kichwa cha habari'), __('Maelezo'), __('Mawasiliano 1'), __('Mawasiliano 2'), __('Anwani'), __('Tovuti')], errors: []})%>
<div class="homePageContainer">
  <div class="sideBar">
    <!-- <% if(currentUser.type !== 'contentManager') {%>
      <a href="/user-management" class="special"><h6><%= __('Ongeza Mtumiaji Mpya')%></h6></a>
    <% } %> -->
    <%- include('partials/SideTab') %> 
  </div>
  <div class="mainContentContainer">
    <div class="homeTopTextContainer">
      <h2><%= __('Vituo Vya Msaada')%></h2>
      <button
        type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#dynamicModal"
        data-value="0"
      >
      <%= __('Ongeza kituo cha msaada')%>
      </button>
    </div>
    
    <div class="homeTableContainer">
      <table class="table table-borderless table-striped tableFixHead table-responsive">
        <thead >
            <tr>
                <th style="width: 10%"><%= __('Kichwa cha habari')%></th>
                <th style="width: 20%"><%= __('Maelezo')%></th>
                <th style="width: 15%"><%= __('Mawasiliano')%> 1</th>
                <th style="width: 15%"><%= __('Mawasiliano')%> 2</th>
                <th style="width: 15%"><%= __('Anwani')%></th>
                <th style="width: 15%"><%= __('Tovuti')%></th>
                <th style="width: 5%"><%= __('Hariri')%></th>
                <th style="width: 5%"><%= __('Futa')%></th>
            </tr>
        </thead>
        <tbody style="overflow-y: scroll">
          <% helpCenters.forEach((item, index) => { %>
          <tr>
            <td><%= item.title %></td>
            <td><%= item.caption %></td>
            <td><%= item.contactOne %></td>
            <td><%= item.contactTwo %></td>
            <td><%= item.address %></td>
            <td><%= item.website %></td>
            <td>
              <button
                type="button"
                class="btn"
                data-toggle="modal"
                data-target="#dynamicModal"
                data-value="<%= item.id %>"
              >
                <i class="fas fa-edit" aria-hidden="true"></i>
              </button>
            </td>
            <td>
              <button type="button" class="btn deleteHelpCenter" data-value="<%= item.id %>">
                <i class="fas fa-trash" aria-hidden="true"></i>
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <span id="helpCentersJSON" hidden>
    <%= JSON.stringify(helpCenters); %>
  </span>
  <script type="application/javascript" src="/scripts/helpCenterViewScript.js"></script>
</div>
<%- include('partials/Footer') %>